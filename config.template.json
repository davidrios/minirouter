{
  "interfaces": ["eth0", "wlan0"],
  "display": {
    "size": [128, 32],
    "font_size": 10,
    "refresh_rate": 1,
    "server": "tcp://localhost:5555"
  },
  "output": "display",
  "output_scale": 6,
  "data_refresh_rate": 5,
  "standby_timeout": 60,
  "buttons_server": {
    "address": "tcp://localhost:5556",
    "button_a": 5,
    "button_b": 6,
    "direction": -1
  },
  "logging": {
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
      "default": {
        "datefmt": "%Y%m%d_%H%M%S",
        "format": "%(asctime)s.%(msecs)03d:%(name)s:%(levelname)s:%(message)s"
      }
    },
    "handlers": {
      "console": {
        "level": "DEBUG",
        "class": "logging.StreamHandler",
        "formatter": "default"
      }
    },
    "loggers": {
      "": {
        "level": "WARNING",
        "handlers": ["console"]
      },
      "minirouter": {
        "level": "INFO",
        "handlers": ["console"],
        "propagate": false
      }
    }
  }
}
